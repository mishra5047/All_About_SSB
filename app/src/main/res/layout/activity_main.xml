<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".MainActivity">

    <ImageView
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:id="@+id/logo_edited"
        android:scaleType="centerInside"
        android:foregroundGravity="center"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/logo_front"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_edited"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="All ABOUT SSB"
        android:textSize="30sp"
        android:fontFamily="@font/arvo_regular"
        android:textColor="@color/colorWhite"
        android:id="@+id/name"
        android:textStyle=""
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If You Can Dream It, You Can Do It"
        android:textSize="25sp"
        android:layout_below="@id/name"
      android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/regular_girasol"/>
    </RelativeLayout>